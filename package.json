{
  "name": "cloudocs",
  "version": "1.0.0",
  "description": "Modern documentation system",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/input.css -o ./public/css/styles.css",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./public/css/styles.css --watch",
    "deploy": "npm run build:css && wrangler deploy"
  },
  "dependencies": {
    "hono": "^3.0.0",
    "marked": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "wrangler": "^3.0.0"
  }
}
